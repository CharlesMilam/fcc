function palindrome(str) {
    str = str.toLowerCase().replace(/\.|,/g, " ").split(" ").join("");
    console.log("str after replace: " + str);
    var ary = str.split("").reverse().join("");
    console.log("ary: " + ary);
    console.log("str: " + str);
    if (ary === str) {
      return true;
    }
    return false;
}



palindrome("eye");
palindrome("race car");
palindrome("A man, a plan, a canal. Panama");
palindrome("nope");
palindrome("not a palindrome");
